<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
	Make sure the "syncthing" executable is located in ~/bin/syncthing.
	Replace the string "USERNAME" in this file with your username, such as "jb".
	Copy this file to ~/Library/LaunchAgents/syncthing.plist.
	Execute "launchctl load ~/Library/LaunchAgents/syncthing.plist".
-->
<plist version="1.0">
	<dict>
		<key>Label</key>
		<string>net.syncthing.syncthing</string>

		<key>ProgramArguments</key>
		<array>
			<string>/nfs/zfs-student-5/users/2013/crenault/.brew/bin/syncthing</string>
			<string>-no-browser</string>
		</array>

		<key>EnvironmentVariables</key>
		<dict>
			<key>HOME</key>
			<string>/nfs/zfs-student-5/users/2013/crenault</string>
			<key>STNORESTART</key>
			<string>1</string>
		</dict>

		<key>KeepAlive</key>
		<true/>

		<key>LowPriorityIO</key>
		<true/>

		<key>ProcessType</key>
		<string>Background</string>

		<key>StandardOutPath</key>
		<string>/nfs/zfs-student-5/users/2013/crenault/Library/Logs/Syncthing.log</string>

		<key>StandardErrorPath</key>
		<string>/nfs/zfs-student-5/users/2013/crenault/Library/Logs/Syncthing-Errors.log</string>
	</dict>
</plist>
